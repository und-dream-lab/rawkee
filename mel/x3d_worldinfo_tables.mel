//-------------------------------------------------------------------
//MEL string variables for setting X3D Routes
//-------------------------------------------------------------------
global string $eoMenu;
global string $eiMenu;
global string $eoFieldTypeX3D;
global string $ftWorldInfoX3D[];
global string $inWorldInfoX3D[];
global string $outWorldInfoX3D[];

//---------------------------------
//Array of Field Types for X3D WorldInfo - table
//---------------------------------

$ftWorldInfoX3D[0] =  "SFNode";



//-----------------------------------
//Array of event in names for X3D WorldInfo Field Types - table
//-----------------------------------

$inWorldInfoX3D[0] =  "set_metadata";


//-----------------------------------

//-----------------------------------
//Array of event out names for X3D WorldInfo Field Types - table
//-----------------------------------

$outWorldInfoX3D[0] =  "metadata_changed";	


//-----------------------------------

//-----------------------------------
//Array of event commands for X3D WorldInfo  - table
//-----------------------------------

//-----------------------------------

//-----------------------------------
//Procedures for building menus for
//Coordinate Events
//-----------------------------------
//-------------------------------------------------------------------------
//Building the WorldInfo eventOut submenu
global proc buildWorldInfoEOMenu(string $highlighted)
{
	global string $eoMenu;
	//nWorldInfoX3D[] size = 1 (0); eventOut fields are 0;
	global string $ftWorldInfoX3D[];
	global string $outWorldInfoX3D[];
	global string $eoFieldTypeX3D;

	int $esi;
	for($esi = 0; $esi < 1; $esi++){
		menuItem -l $outWorldInfoX3D[$esi] -parent $eoMenu -c ("processMenuX3D " + $highlighted + " " + $outWorldInfoX3D[$esi] + " " + $ftWorldInfoX3D[$esi] + " 0");
	}
}
//-------------------------------------------------------------------------


//-------------------------------------------------------------------------
//Building the WorldInfo eventIn submenu
global proc buildWorldInfoEIMenu(string $highlighted)
{
	global string $eiMenu;
	//nWorldInfoX3D[] size = 1 (0); eventIn fields are 0;
	global string $ftWorldInfoX3D[];
	global string $inWorldInfoX3D[];
	global string $eoFieldTypeX3D;

		
	int $esi;
	for($esi=0;$esi<1;$esi++){
		if($eoFieldTypeX3D == $ftWorldInfoX3D[$esi])
		{
			menuItem -l $inWorldInfoX3D[$esi] -parent $eiMenu -c ("processMenuX3D " + $highlighted + " " + $inWorldInfoX3D[$esi] + " " + $ftWorldInfoX3D[$esi] + " 1");
		}
	}
	
	menuItem -divider true;
	menuItem -l "Reset" -parent $eiMenu -c "resetX3DRoutes";
}
//-------------------------------------------------------------------------

print("WorldInfo Field Tables have been sourced.\n");
